@model DataLayer.Article

@{
    ViewBag.Title = "Delete";
}

<h2>حذف</h2>

<h3>ایا از حذف این مقاله مطمعن هستید ؟</h3>
<div>

	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.ImageName)
		</dt>

		<dd>
			<img src="~/Image/Article/Thumb/@Model.ImageName" alt="Alternate Text" class="thumbnail" />
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.Title)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Title)
		</dd>

		<dt>
			@Html.DisplayNameFor(model => model.ShortDiscript)
		</dt>

		<dd>
			@Html.DisplayFor(model => model.ShortDiscript)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.CreatDate)
		</dt>

		<dd>
			@Model.CreatDate.ToString();
		</dd>

	</dl>

    @using (Html.BeginForm()) {
        @*@Html.AntiForgeryToken()*@

        <div class="form-actions no-color">
            <input type="submit" value="حذف" class="btn btn-danger" /> |
            @Html.ActionLink("بازگشت به لیست", "Index")
        </div>
    }
</div>
