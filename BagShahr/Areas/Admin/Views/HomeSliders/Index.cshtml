@model IEnumerable<DataLayer.HomeSlider>

@{
	ViewBag.Title = "اسلایدر";
}

<br />
<br />
<a href="@Url.Action("Create")" class="btn btn-success">اسلاید جدید </a>
<br />
<br />
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.ImgName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ImgAlt)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Title)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.SubTitle)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.CreatDate)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				<img src="~/Image/slider/thumb/@item.ImgName" alt="@item.ImgAlt" />
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.ImgAlt)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Title)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.SubTitle)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.CreatDate)
			</td>
			<td>
				<a class="btn btn-success btn-sm" href="/">نمایش </a>
				<a class="btn btn-danger btn-sm" href="@Url.Action("Delete",new {id=item.Id})">حذف</a>
			</td>
		</tr>
	}

</table>
