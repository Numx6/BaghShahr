@model DataLayer.Product

<div class="item">
	<div class="thumbnail">
		<a href="SingleProduct/@Model.ProductID">
			<img src="~/Image/@Model.ImageName" class="Contetnt1-img img-responsive">
			<div class="badg-img-Content1">
				<span>کد ملک:@Model.Code</span>
			</div>

			<div class="min-height">
				<div class="caption caption-Content1">
					<h4>@Model.Title</h4>
					<p>
						@Model.ShortDiscription
					</p>
				</div>
			</div>
		</a>
		<div class="submit-Content1">
			<div class="col-xs-7 col-sm-7 col-md-7 col-lg-7 Content-S-6-right">
				<span>@Model.Price.ToString("#,0")</span>
			</div>
			<div class="col-xs-5 col-sm-5 col-md-5 col-lg-5 Content-S-6-left">
				<a href="SingleProduct/@Model.ProductID" class="btn btn-danger submit-Content1-button">اظلاعات بیشتر</a>
			</div>
		</div>
	</div>
</div>
