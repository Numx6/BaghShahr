@model IEnumerable<DataLayer.Product>
@{
	ViewBag.Title = "آرشیو";
}

@section Slider{
	@Html.Action("Slider")
	@Html.Action("Nav")
}


<div class="background-list">

	<div class="container">

		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 list-header">
			<h2 class="list-header-text">
				لیست خرید و فروش باغ ویلا
			</h2>
		</div>
		@foreach (var item in Model)
		{
			@Html.Partial("_Product", item);
		}

		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 PageConst">
			<nav aria-label="Page navigation">
				<ul class="pagination">
					@if (ViewBag.PageCount > 0)
					{
						<div class="pagination-layer">
							<ul class="pagination">

								@for (int i = 1; i <= ViewBag.PageCount; i++)
								{
									<li><a href="@Url.Action("Arshive",new { id = i })">@i</a></li>
								}

							</ul>
						</div>
					}
				</ul>
			</nav>
		</div>

	</div>

</div>


@section scripts{
	<script src="~/Content/script/CustomScript.js"></script>
}